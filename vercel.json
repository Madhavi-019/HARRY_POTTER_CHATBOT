{
  "builds": [
    {
      "src": "frontend/harry_potter_chatbot.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
